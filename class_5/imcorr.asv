function [Icorr, iMaxRes, jMaxRes, c] = imcorr(I, w)
[m, n] = size(I); [m0, n0] = size(w);
Icorr = zeros(m-m0+1, n-n0+1);
vecW = double(w(:));
normW = norm(vecW);
for ii = 1:n-m0+1
    for jj = 1:n-n0+1
        subMat = I(ii:ii+m0-1, jj:jj+n0-1);
        vec = double(subMat(:));
        Icorr(ii, jj) = vec'*vecW/(norm(vec)*normW+eps);
    end
end

c = max(Icorr(:));
[iMax, jMax] = find(Icorr == c);
figure

end